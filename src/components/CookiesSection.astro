        colorPrincipal: "group-hover:bg-[--green-astro]",
        colorBoton1: "bg-red-800",
        colorBoton2: "bg-red-100",
        colorFont: "group-hover:text-[--cake-astro]",
        description:" El planeta rojo sabe a galleta de red velvet y chocolate blanco rellena de crema de queso ",
    },
    {
        name: "Sol",
        img: "/sol.webp",
        colorPrincipal: "group-hover:bg-[--purple-astro]",
        colorBoton1: "bg-red-800",
        colorBoton2: "bg-red-100",
        colorFont: "group-hover:text-[--cake-astro]",
        description:" La clásica galleta con chispitas de colores pero mejorada! Galleta de vainilla con sprinkles rellena de crema de queso",
    },
    {
        name: "Urano",
        img: "/urano.webp",
        colorPrincipal: "group-hover:bg-[--dark-blue-astro]",
        colorBoton1: "bg-red-800",
