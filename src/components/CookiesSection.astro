    {
        name: "Luna",
        img: "/luna.webp",
        colorPrincipal: "group-hover:bg-[--primary-blue-astro]",
        colorBoton1: "bg-red-800",
        colorBoton2: "bg-red-100",
        colorFont: "group-hover:text-[--cake-astro]",
        description:"La Luna no sabe a queso pero si a sueños, galleta de chocolate blanco y almendras",
    },
    {
        name: "Venus",
        img: "/venus.webp",
        colorPrincipal: "group-hover:bg-[--cake-astro]",
        colorBoton1: "bg-red-800",
        colorBoton2: "bg-red-100",
        colorFont: "group-hover:text-[--darkest-blue-astro]",
        description:"Te gusta el chocolate? 🍫 Esta será tu favorita, galleta de chocolate y nueces con relleno de crema de avellana",
